---
import { Container } from '@littlesticks/odyssey-theme-components';
---



 <Container>
    <section class="five-col-text__section">
      <div class="five-col-text__column">
        <slot name="column-1-body"></slot>
        <slot name="column-1-cta"></slot>
      </div>
      <div class="five-col-text__column">
        <slot name="column-2-body"></slot>
        <slot name="column-2-cta"></slot>
      </div>
      <div class="five-col-text__column">
        <slot name="column-3-body"></slot>
        <slot name="column-3-cta"></slot>
      </div>
      <div class="five-col-text__column">
        <slot name="column-4-body"></slot>
        <slot name="column-4-cta"></slot>
      </div>
      <div class="five-col-text__column">
        <slot name="column-5-body"></slot>
        <slot name="column-5-cta"></slot>
      </div>
    </section>
  </Container>


<style>
  .five-col-text__section {
    --column-count: 5;
    --column-width: calc(100% / var(--column-count));
    margin: var(--section-margin) auto;
    display: flex;
    flex-wrap: wrap;
    text-align: center;
    justify-content: space-evenly;
  }
  .five-col-text__column {
    width: var(--column-width);
    margin-bottom: 2rem;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  @media(max-width: 1200px) {
    .five-col-text__section {
      --column-count: 4;
    }
  }
  @media(max-width: 768px) {
    .five-col-text__section {
      --column-count: 2;
    }
  }
</style>
